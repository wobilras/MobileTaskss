<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AboutTheApp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:src="@drawable/smile_face" />

    <TextView
        android:id="@+id/aboutapp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutapp1"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/aboutapp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutapp2"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/aboutapp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutapp3"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/maskAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/animated_mask" />

</LinearLayout>